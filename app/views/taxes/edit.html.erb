<h1>
  <%= @tax %>
</h1>
<div class="row">
  <div class="col-xs-12 col-md-6 col-xl-4">
    <%= render 'form' %>
  </div>
</div>
<div class="action-buttons" data-role="action-buttons">
  <%= link_to t("delete"), @tax, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger float-start no-margin' %>
  <%= link_to t("back"), :back, class: 'btn btn-secondary' %>
  <button class="btn btn-success" data-role="submit-form" data-target="form" type="button">
    <%= t("save") %>
  </button>
</div>
