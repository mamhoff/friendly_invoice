<h1>
  <%= t("taxes") %>
</h1>
<%= form_tag url_for(:controller => "taxes", :action => "set_default"), :method => :post, :class => "change_default" do %>
  <div class="table-responsive">
    <table class="table table-hover table-striped table-bordered">
      <thead>
        <th class="table-select text-nowrap">
          <%= t("default") %>
        </th>
        <th>
          <%= t("tax name") %>
        </th>
      </thead>
      <tbody>
        <% @taxes.each do |tax| %>
          <tr>
            <td class="table-select">
              <%= check_box_tag 'default_tax[]', tax.id, tax.default, {id: "default_tax_#{tax.id}", "data-role" => "select-default"} %>
            </td>
            <td>
              <%= link_to tax.name, edit_tax_path(tax) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
