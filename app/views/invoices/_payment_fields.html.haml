.invoice-row.invoice-payment.js-payment
  .invoice-col.mb-3
    = f.label :date
    = f.date_field :date, class: 'form-control'
  .invoice-col.invoice-col--description.mb-3
    = f.label :notes
    = f.text_area :notes, class: "form-control", rows: 1
  .invoice-col.invoice-col--amount.mb-3
    = f.label :amount
    = f.text_field :amount, class: 'form-control'

  = link_to_remove_association f, {wrapper_class: 'js-payment', class: 'destroy-icon'} do
    = material_icon.shape(:delete)
    %span Remove Payment

  = f.hidden_field :id
