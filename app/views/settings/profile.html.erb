<h1>
  <%= t("my account") %>
</h1>
<div class="row">
  <div class="col-xs-12 col-md-6 col-xl-4">
    <%= form_for @user, url: settings_profile_path, method: :put do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize @user.errors.count, "error" %>
            prohibited these profile settings from being saved:
          </h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li>
                <%= message %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-3">
        <%= f.label :name, "#{t("name")}:" %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :email, "#{t("email")}:" %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= label_tag :old_password, "#{t("old")} #{t("password")}:" %>
        <%= password_field_tag :old_password, nil, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :password, "#{t("new")} #{t("password")}:" %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :password_confirmation, "#{t("new")} #{t("password")} #{t("confirmation")}:" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
    <% end %>
  </div>
</div>
<div class="action-buttons" data-role="action-buttons">
  <button class="btn btn-success" data-role="submit-form" data-target="form" type="button">
    <%= t("save") %>
  </button>
</div>
