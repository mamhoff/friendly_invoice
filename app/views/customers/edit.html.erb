<%= render 'form' %>
<div class="action-buttons" data-role="action-buttons">
  <%= link_to t("delete"), @customer, method: :delete, class: 'btn btn-danger float-start no-margin', "data-confirm" => 'Are you sure?' %>
  <%= link_to t("back"), :back, class: 'btn btn-secondary' %>
  <button class="btn btn-success" data-role="submit-form" data-target="form" type="button">
    <%= t("save") %>
  </button>
</div>
